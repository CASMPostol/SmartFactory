<UserControl x:Class="CAS.SmartFactory.Shepherd.Client.Management.Controls.LogPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="Auto">
    <Grid Width="Auto" Height="Auto" Background="White" Opacity="0.7" Margin="10,10,10,10">
        <TextBlock VerticalAlignment="Top" Style="{DynamicResource CASTextBlockHeader}" Margin="10,10,10,10">Log</TextBlock>
        <ListView Height="800" x:Name="x_ListBox" Style="{DynamicResource CASListView}" ItemsSource="{Binding ProgressList}" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="10,55,0,0" HorizontalAlignment="Left" Visibility="Visible" />
    </Grid>
</UserControl>

<UserControl x:Class="CAS.SmartFactory.Shepherd.Client.Management.Controls.ButtonsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="x_StackPanelButtons" DockPanel.Dock="Top" Orientation="Horizontal" Height="60" Margin="40,0,0,5" HorizontalAlignment="Left">
            <TextBlock Margin="20,10,10,10" >Actions:</TextBlock>
            <Button Content="{Binding Path=LeftButtonTitle}" Command="{Binding Path=LeftButtonCommand}" Visibility="{Binding Path=LeftButtonVisibility}" />
            <Button Content="{Binding Path=LeftMiddleButtonTitle}" Command="{Binding Path=LeftMiddleButtonCommand}" Visibility="{Binding Path=LeftMiddleButtonVisibility}" />
            <Button Content="{Binding Path=RightMiddleButtonTitle}" Command="{Binding Path=RightMiddleButtonCommand}" Visibility="{Binding Path=RightMiddleButtonVisibility}" />
            <Button Content="{Binding Path=RightButtonTitle}"  Command="{Binding Path=RightButtonCommand}" Visibility="{Binding Path=RightButtonVisibility}" />
        </StackPanel>
    </Grid>
</UserControl>

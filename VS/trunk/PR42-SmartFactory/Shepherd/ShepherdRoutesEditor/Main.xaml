<Window x:Class="CAS.SmartFactory.Shepherd.RouteEditor.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shepherd Route Editor" Height="400" Width="500" ResizeMode="NoResize" Icon="Images/ico.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="223*"/>
        </Grid.RowDefinitions>
        <Label Content="Site URL:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="URLTextBox" Margin="10,34,10,0" TextWrapping="Wrap" Text="Site URL" Background="White" ToolTip="Enter your website URL" Height="31" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Button Name="UpdateRoutesButton" Click="UpdateRoutesButton_Click"
                Content="Update routes" Margin="10,9,10,0" ToolTip="Import xml file and update existing routes, cities, countries and marekts lists" Grid.Row="1" Height="41" VerticalAlignment="Top"/>
        <ListBox Name="ErrorList" Margin="10,55,10,10" Grid.Row="1"/>
    </Grid>
</Window>

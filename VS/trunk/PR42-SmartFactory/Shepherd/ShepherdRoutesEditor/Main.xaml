<Window x:Class="CAS.SmartFactory.Shepherd.RouteEditor.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="229*"/>
        </Grid.RowDefinitions>
        <TextBox Name="URLTextBox" Margin="10,10,10,0" TextWrapping="Wrap" Text="Site URL" Background="White" ToolTip="Enter your website URL"/>
        <Button Name="UpdateRoutesButton" Click="UpdateRoutesButton_Click"
                Content="Update routes" Margin="10,9,10,179" ToolTip="Import xml file and update existing routes, cities, countries and marekts lists" Grid.Row="1"/>
        <ListBox Name="ErrorList" Margin="10,55,10,10" Grid.Row="1"/>
    </Grid>
</Window>
